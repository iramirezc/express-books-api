{
  "name": "books-api-express",
  "version": "1.0.0",
  "description": "A Dockerized Bookshelf API using Express",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "debug": "nodemon --inspect-brk=0.0.0.0:9229 index.js",
    "test": "yarn test:unit && yarn test:func",
    "test:unit": "NODE_ENV=test mocha server/**/*.test.js",
    "test:func": "NODE_ENV=test nyc --reporter=html --reporter=text mocha -R nyan --recursive",
    "test:sanity": "NODE_ENV=test mocha --recursive --grep 'sanity'"
  },
  "author": "iramirezc@live.com.mx",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.16.4",
    "glob": "^7.1.4",
    "mongoose": "^5.5.11"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^6.1.4",
    "node-mocks-http": "^1.7.5",
    "nodemon": "^1.19.0",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2"
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "it"
    ]
  }
}
